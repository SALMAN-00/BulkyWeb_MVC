@model List<Category>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
	</div>
	<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary rounded-2"> <i class="bi bi-plus-circle"></i> Create new category</a>

	</div>
	</div>


<table class="table table-bordered table-striped">
	<thead>
	<tr>
		<th>Category id</th>
		<th>Category Name</th>
		<th>DisplayOrder</th>
		<th>Actions</th>
	</tr>
		</thead>
		<tbody>
@foreach(var obj in Model){
	<tr>
		<td>
			@obj.Id
		</td>
		<td>
			@obj.Name
		</td>
		<td>
			@obj.DisplayOrder
		</td>
		
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-conroller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary rounded-2 mx-2"><i class="bi bi-pencil-square"> Edit</i></a>

							<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger rounded-2 mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
						</div>
					</td>
	</tr>
			}
		</tbody>

	</table>
</div>
